        @* NavBarTop *@
        @await Html.PartialAsync("_NavBarTop")

        @* NavBarTop *@
        @await Html.PartialAsync("_NavBarLateral")

        <div class="page-wrapper">
            <div class="content container-fluid">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
        </div>

