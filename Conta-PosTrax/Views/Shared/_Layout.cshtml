<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Conta-PosTrax</title>
    <script type="importmap"></script>

    @* CSS Plantilla *@
    <link rel="stylesheet" href="~/assets/css/bootstrap.min.css?v=@(DateTime.Now.Ticks)" />
    <link rel="stylesheet" href="~/assets/plugins/fontawesome/css/fontawesome.min.css?v=@(DateTime.Now.Ticks)" />
