@model Conta_PosTrax.Models.LoginModel

@{
    Layout = "_LayoutEmpty";
    ViewData["Title"] = "Login";
}


@section Styles {
    <link rel="stylesheet" href="~/css/login.css?v=@(DateTime.Now.Ticks)" />
}

<!-- Tu contenido HTML actual -->

@section Scripts {
    <script src="~/js/login.js?v=@DateTime.Now.Ticks"></script>
}

<div class="main-wrapper login-body">
    <div class="login-wrapper">
        <div class="container">
            <img class="img-fluid logo-dark mb-2" src="assets/img/logo.png" alt="Logo">
            <div class="loginbox">
                <div class="login-right">
                    <div class="login-right-wrap">
                        <h1>Login</h1>

                        <form id="LoginForm" asp-action="Login" asp-controller="Home" method="post">
                            @Html.AntiForgeryToken()
                            <div class="form-group">
                                <label class="form-control-label" asp-for="Usuario">Usuario o Correo</label>
                                <input type="text" asp-for="Usuario" class="form-control">
                                <span asp-validation-for="Usuario" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label class="form-control-label" asp-for="Password">Password</label>
                                <div class="pass-group">
                                    <input type="password" asp-for="Password" class="form-control pass-input">
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                    <span class="fas fa-eye toggle-password"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-6">
                                        <div class="custom-control custom-checkbox">
                                            <input type="checkbox" class="custom-control-input" id="cb1">
                                            <label class="custom-control-label" for="cb1">Remember me</label>
                                        </div>
                                    </div>
                                    <div class="col-6 text-end">
                                        <a class="forgot-link" onclick="location.href='@Url.Action("ForgotPassword", "Home")'" style="cursor: pointer;">Forgot Password ?</a>
                                    </div>
                                </div>
                            </div>
                            <button class="btn btn-lg btn-block btn-primary w-100" id="LoginAction" type="submit">Login</button>
                            <div class="text-center dont-have">
                                Don't have an account yet? <a onclick="location.href='@Url.Action("Register", "Home")'" style="cursor: pointer;">Register</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>