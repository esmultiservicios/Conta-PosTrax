@model Conta_PosTrax.Models.RegistroModel

@{
	Layout = "_LayoutEmpty";
	ViewData["Title"] = "Login";
}

<div class="main-wrapper login-body">
	<div class="login-wrapper">
		<div class="container">
			<img class="img-fluid logo-dark mb-2" src="~/assets/img/logo.png" alt="Logo">
			<div class="loginbox">
				<div class="login-right">
					<div class="login-right-wrap">
						<h1>Register</h1>
						<p class="account-subtitle">Access to our dashboard</p>

						<form id="RegisterForm">
							@Html.AntiForgeryToken()
							<div class="form-group">
								<label class="form-control-label" asp-for="Name">Name</label>
								<input class="form-control" type="text" asp-for="Name">
								<span asp-validation-for="Name" class="text-danger"></span>
							</div>
							<div class="form-group">
								<label class="form-control-label" asp-for="Correo">Email Address</label>
								<input class="form-control" type="text" asp-for="Correo">
								<span asp-validation-for="Correo" class="text-danger"></span>
							</div>
							<div class="form-group">
								<label class="form-control-label" asp-for="Password">Password</label>
								<input class="form-control" type="password" asp-for="Password">
								<span asp-validation-for="Password" class="text-danger"></span>
							</div>
							<div class="form-group">
								<label class="form-control-label" asp-for="ConfirmPassword">Confirm Password</label>
								<input class="form-control" type="password" asp-for="ConfirmPassword">
								<span asp-validation-for="ConfirmPassword" class="text-danger"></span>
							</div>
							<div class="form-group mb-0">
								<button class="btn btn-lg btn-block btn-primary w-100" type="submit" id="RegisterAction">Register</button>
							</div>
						</form>

						<div class="text-center dont-have">
							Already have an account? <a onclick="location.href='@Url.Action("Login", "Home")'" style="cursor: pointer;">Login</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>